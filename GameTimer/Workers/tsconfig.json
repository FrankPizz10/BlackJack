{
  "compilerOptions": {
    "target": "es2023",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "paths": {
      "@shared-types/*": ["../../Packages/shared-types/dist/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../../Packages/shared-types"
    }
  ]
}

